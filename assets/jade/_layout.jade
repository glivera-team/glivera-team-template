include templates/_global_vars
include templates/_global_mixins
include templates/_project_mixins
include templates/_project_vars
- var array = '';
block vars
doctype
html(lang="ru", xmlns:og="http://ogp.me/ns#")
	head
		+head(array)
	body.no_animation.develop_mod(class='#{array.body_class}', ontouchstart="")
		if array.body_class != 'login_page'
			+header(array)
		else if array.body_class != 'home_page'
			+header(array)
		.wrapper(class='#{array.layuot_mod}')
			.base(class='#{array.layuot_mod}')
				block content_block
		block local_popup